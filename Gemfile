source 'https://rubygems.org'

# script/generate/views.rb
gem 'activesupport'
gem 'json'

## Jekyll
gem 'jekyll'
gem 'boostrap-sass'
gem 'tzinfo-data', platforms: [:mingw, :mswin, :x64_mingw, :jruby] # Windows zoneinfo
group :jekyll_plugins do
  # Jekyll Assets
  gem 'jekyll-assets'
  gem 'sass'
  gem 'uglifier'
  # Standalone
  gem 'jekyll-redirect-from'
  gem 'jekyll-feed'
  gem 'jekyll-avatar'
  gem 'jekyll-sitemap'
  gem 'jekyll-mentions'
  gem 'jekyll-paginate'
  gem 'jemoji'
end
